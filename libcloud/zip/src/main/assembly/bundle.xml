<assembly>
  <id>bundle</id>

  <includeBaseDirectory>false</includeBaseDirectory>

  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>

  <fileSets>

    <fileSet>
      <directory>${project.build.directory}/dependency/apache-libcloud-${libcloud.version}/libcloud</directory>
      <directoryMode>755</directoryMode>
      <fileMode>644</fileMode>
      <outputDirectory>libcloud</outputDirectory>
      <excludes>
        <exclude>test/**/*</exclude>
        <exclude>**/*.pyc</exclude>
      </excludes>
    </fileSet>
    <fileSet>
        <directory>${project.build.directory}/dependency/backports.ssl_match_hostname-${ssl-match-hostname.version}/src/</directory>
      <directoryMode>755</directoryMode>
      <fileMode>644</fileMode>
      <outputDirectory>backports</outputDirectory>
      <excludes>
        <exclude>**/*.pyc</exclude>
        <exclude>**/*.pyo</exclude>
      </excludes>
    </fileSet>

  </fileSets>

</assembly>
