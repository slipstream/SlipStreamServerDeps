
    # login page that uses session resources
    #
    # If the URL exists, then serve the file, otherwise
    # use the base index file.  It is important to
    # check the files first so that the CSS, JavaScript,
    # images, etc. are all available.
    #

    location ~ /authn {
        root /opt/slipstream;
        try_files $uri /authn/index.html;
        etag on;
        expires 604800;
        if_modified_since before;
    }
